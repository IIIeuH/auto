extends layout

block content
    .container-fluid
        .row
            .col-md
                .input-group.mb-3
                    .input-group-prepend
                        span.input-group-text Тип авто
                    input#services.form-control(type='text', aria-label='Default')
                button.btn.btn-outline-info(type='button', id="addServices") Добавить
        .row.services-wrap
            each item in services
                .col-lg-4.col-md-12.col-sm-12
                    .service-admin-wrap
                        button.close.removeServices(type='button', aria-label='Close', id=item._id)
                            span(aria-hidden='true') ×
                        .input-group.mb-3
                            .input-group-prepend
                                span.input-group-text Тип авто
                            input.type.form-control(type='text', value=item.name, id=item._id)
                        button.btn.btn-outline-dark.look-service(type="button") Показать
                        button.btn.btn-outline-primary.addFiled(type="button" style="margin-left: 10px;") Добавить
                        each service, i in item.service
                            .services-admin-wrap(id=i)
                                button.close.removeNameService(type='button', aria-label='Close')
                                    span(aria-hidden='true') ×
                                .input-group.mb-3
                                    .input-group-prepend
                                        span.input-group-text Название
                                    input.name.form-control(type='text', value=service.name)
                                .input-group.mb-3
                                    .input-group-prepend
                                        span.input-group-text Цена
                                    input.price.form-control(type='number', value=service.price)
                                .input-group.mb-3
                                    .input-group-prepend
                                        span.input-group-text Время
                                    input.time.form-control(type='number', value=service.time)
                                button.btn.btn-outline-info.updateField(type="button") Сохранить