extends layout

block content
    .container-fluid
        .row
            .col-md
                label(for="coffee-price") Кофе
                .input-group.mb-3
                    .input-group-prepend
                        span.input-group-text цена
                    input#coffee-price.form-control(type='number', min="1")
                    .input-group-prepend
                        span#tea-label.input-group-text шт.
                    input#coffee-pieces.form-control(type='number', min="1")
            .col-md
                label(for="sugar-price") Сахар
                .input-group.mb-3
                    .input-group-prepend
                        span.input-group-text цена
                    input#sugar-price.form-control(type='number', min="1")
                    .input-group-prepend
                        span#sugar-label.input-group-text шт.
                    input#sugar-pieces.form-control(type='number', min="1")
            .col-md
                label(for="stirrer-price") Размешиватели
                .input-group.mb-3
                    .input-group-prepend
                        span.input-group-text цена
                    input#stirrer-price.form-control(type='number', min="1")
                    .input-group-prepend
                        span#stirrer-label.input-group-text шт.
                    input#stirrer-pieces.form-control(type='number', min="1")
            .col-md
                label(for="glasses-price") Стаканы
                .input-group.mb-3
                    .input-group-prepend
                        span.input-group-text цена
                    input#glasses-price.form-control(type='number', min="1")
                    .input-group-prepend
                        span#glasses-label.input-group-text шт.
                    input#glasses-pieces.form-control(type='number', min="1")
            .col-md
                label(for="water-price") Вода
                .input-group.mb-3
                    .input-group-prepend
                        span.input-group-text цена
                    input#water-price.form-control(type='number', min="1")
                    .input-group-prepend
                        span#water-label.input-group-text шт.
                    input#water-pieces.form-control(type='number', min="1")
        .row
            .col-md
                button.btn.btn-outline-info(type='button', id="saveCoffee") Сохранить
        .row
            .col-md
                table.table.coffee-table.table-hover(style="margin-top:20px;")
                    thead
                        th Наименование услуги
                        th Цена
                        th Кол-во
                    tbody.coffee-body
                        each item in data
                            tr.elev
                                td.id=item.name
                                td.cofeeRed.price(contenteditable="true")=item.price
                                td.cofeeRed.quantity(contenteditable="true")=item.quantity