extends layout

block content
    .container-fluid
        .row
            .col-md.d-flex.flex-wrap.justify-content-start
                .card.status.mt-3.mr-3(style='width: 14rem;')
                    a(href="/box?number=1")
                        img.card-img-top(src='./img/1.png', alt='Card image cap')
                    .card-body
                        p.card-text.lead
                            | 1 бокс
                        p.time.card-text.h1(data-time=box1)=getTimeFromMins(box1)
                .card.status.mt-3.mr-3(style='width: 14rem;')
                    a(href="/box?number=2")
                        img.card-img-top(src='./img/1.png', alt='Card image cap')
                    .card-body
                        p.card-text.lead
                            | 2 бокс
                        p.time.card-text.h1(data-time=box2)=getTimeFromMins(box2)
                .card.status.mt-3.mr-3(style='width: 14rem;')
                    a(href="/box?number=3")
                        img.card-img-top(src='./img/1.png', alt='Card image cap')
                    .card-body
                        p.card-text.lead
                            | 3 бокс
                        p.time.card-text.h1(data-time=box3 || 0)=getTimeFromMins(box3)
                .card.status.mt-3.mr-3(style='width: 14rem;')
                    a(href="/box?number=4")
                        img.card-img-top(src='./img/1.png', alt='Card image cap')
                    .card-body
                        p.card-text.lead
                            | 4 бокс
                        p.time.card-text.h1(data-time=box4)=getTimeFromMins(box4)
                .card.status.mt-3.mr-3(style='width: 14rem;')
                    a(href="/box?number=5")
                        img.card-img-top(src='./img/1.png', alt='Card image cap')
                    .card-body
                        p.card-text.lead
                            | 5 бокс
                        p.time.card-text.h1(data-time=box5)=getTimeFromMins(box5)


        .row
            .modal(tabindex='-1', role='dialog' data-backdrop="static" data-keyboard="false")
                .modal-dialog(role='document')
                    .modal-content
                        .modal-header
                            h5.modal-title Администратор
                        .modal-body
                            select.form-control.check-admin
                                option(value="" disabled, selected) Выберите администатора
                                each item in admin
                                    option(value=item.fio)=item.fio
                        .modal-footer
                            button.btn.btn-primary(type='button', id="saveAdministrator") Сохранить