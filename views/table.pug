.container-fluid
    .row
        .col-sm
            table.table.table-striped.table-bordered.table-hover.table-sm
                thead.thead-dark
                    th Время на заказ / ч.
                    th Марка
                    th Номер
                    th Услуги
                    th Доп услуги
                    th Мойщик
                    th Сумма
                    th Действие
                tbody.tr-body
                    each item in data
                        tr.str(data-status=item.status)
                            td(data-minutes=item.time).time=getTimeFromMins(item.time)
                            td.car=item.car
                            td.number=item.number
                            td.service-main=item.services
                            td.dop=item.dopServices
                            td=item.washer
                            td.price=item.price
                            td.d-flex.justify-content-center
                                button.btn.btn-dark.delete(type='button') Удалить
                                button.btn.btn-primary.status-wash(type='button') Заехать
                                button.btn.btn-success.status-ready(type='button') Готово
                                button.btn.btn-warning.status-await(type='button') Отмена

